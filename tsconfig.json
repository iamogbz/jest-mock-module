{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "outDir": "./lib",
        "strict": true,
        "target": "es5"
    },
    "exclude": ["node_modules", "lib"]
}
